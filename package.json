{
    "name": "decentralised-voting",
    "private": true,
    "version": "0.1.0",
    "description": "A simple voting app built on the Ethereum network.",
    "main": "src/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/kieranroneill/decentralised-voting.git"
    },
    "author": "Kieran O'Neill <kieranroneill@googlemail.com>",
    "license": "SEE LICENSE IN LICENSE.md",
    "scripts": {
        "build": "cross-env NODE_ENV=\"production\" concurrently \"npm run build:client\"",
        "build:client": "node -r babel-register node_modules/.bin/webpack --config webpack/webpack.config.js --progress",
        "lint": "eslint --ext .js  --ext .vue .",
        "start": "cross-env NODE_ENV=\"development\" concurrently \"npm run start:network\" \"npm run start:client\"",
        "start:client": "node -r babel-register node_modules/.bin/webpack-dev-server --config webpack/webpack.dev.config.js --progress --host 0.0.0.0",
        "start:network": "ganache-cli --port 8545",
        "test": "npm run start:network && concurrently \"npm run test:client\" \"npm run test:contracts\"",
        "test:client": "nyc mocha-webpack --opts test/mocha.opts --webpack-config webpack/webpack.test.config.js -- 'src/**/*.{js,vue}'",
        "test:contracts": "truffle test 'src/contracts/**/*.js'",
        "truffle": "node -r babel-register node_modules/.bin/truffle"
    },
    "devDependencies": {
        "autoprefixer": "^7.2.3",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.0.0",
        "babel-loader": "^7.1.2",
        "babel-plugin-istanbul": "^4.1.5",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-3": "^6.24.1",
        "babel-register": "^6.26.0",
        "chai": "^4.1.2",
        "clean-webpack-plugin": "^0.1.16",
        "concurrently": "^3.5.0",
        "cross-env": "^5.1.3",
        "css-loader": "^0.28.7",
        "eslint": "^4.7.1",
        "eslint-plugin-vue": "^4.0.0-beta.4",
        "extract-text-webpack-plugin": "^3.0.2",
        "favicons-webpack-plugin": "^0.0.7",
        "file-loader": "^0.11.2",
        "ganache-cli": "^6.0.3",
        "handlebars": "^4.0.10",
        "handlebars-loader": "^1.6.0",
        "html-webpack-plugin": "^2.30.1",
        "istanbul-instrumenter-loader": "^3.0.0",
        "jsdom": "^11.5.1",
        "json-loader": "^0.5.7",
        "mocha": "^4.0.1",
        "mocha-junit-reporter": "^1.15.0",
        "mocha-multi-reporters": "^1.1.7",
        "mocha-webpack": "^1.0.1",
        "node-sass": "^4.5.3",
        "null-loader": "^0.1.1",
        "nyc": "^11.2.1",
        "postcss-loader": "^1.3.1",
        "sass-loader": "^6.0.6",
        "sinon": "^4.1.3",
        "style-loader": "^0.18.2",
        "truffle": "^4.0.4",
        "truffle-solidity-loader": "^0.0.8",
        "url-loader": "^0.5.9",
        "vue-loader": "^13.6.1",
        "vue-template-compiler": "^2.5.13",
        "webpack": "^3.6.0",
        "webpack-dev-server": "^2.8.2",
        "webpack-node-externals": "^1.6.0",
        "webpack-notifier": "^1.5.0"
    },
    "dependencies": {
        "vue": "^2.5.13",
        "web3": "0.20.1"
    }
}
