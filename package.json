{
    "name": "decentralised-voting",
    "private": true,
    "version": "0.1.0",
    "description": "A simple voting app built on the Ethereum network.",
    "main": "src/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/kieranroneill/decentralised-voting.git"
    },
    "author": "Kieran O'Neill <kieranroneill@googlemail.com>",
    "license": "SEE LICENSE IN LICENSE.md",
    "scripts": {
        "build": "yarn deploy:development && cross-env NODE_ENV=\"production\" node -r babel-register node_modules/.bin/webpack --config webpack/webpack.config.js --progress",
        "lint": "eslint --ext .js  --ext .jsx .",
        "deploy:development": "truffle compile && truffle migrate --network development",
        "deploy:production": "truffle compile && truffle migrate --network production",
        "start": "yarn deploy:development && cross-env NODE_ENV=\"development\" node -r babel-register node_modules/.bin/webpack-dev-server --config webpack/webpack.dev.config.js --progress --host 0.0.0.0",
        "start:network": "ganache-cli --port 8545",
        "test": "concurrently \"yarn test:client\" \"yarn test:contracts\"",
        "test:client": "cross-env NODE_ENV=\"test\" nyc mocha -- './src/**/*.test.{js,jsx}'",
        "test:contracts": "yarn deploy:development && truffle test --network development"
    },
    "devDependencies": {
        "autoprefixer": "^7.2.3",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.0.0",
        "babel-loader": "^7.1.2",
        "babel-plugin-istanbul": "^4.1.5",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "babel-register": "^6.26.0",
        "chai": "^4.1.2",
        "clean-webpack-plugin": "^0.1.16",
        "concurrently": "^3.5.0",
        "cross-env": "^5.1.3",
        "css-loader": "^0.28.7",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "eslint": "^4.7.1",
        "eslint-plugin-react": "^7.7.0",
        "extract-text-webpack-plugin": "^3.0.2",
        "favicons-webpack-plugin": "^0.0.7",
        "file-loader": "^0.11.2",
        "ganache-cli": "^6.0.3",
        "handlebars": "^4.0.10",
        "handlebars-loader": "^1.6.0",
        "html-webpack-plugin": "^2.30.1",
        "ignore-styles": "^5.0.1",
        "istanbul-instrumenter-loader": "^3.0.0",
        "jsdom": "^11.5.1",
        "json-loader": "^0.5.7",
        "mocha": "^4.0.1",
        "mocha-junit-reporter": "^1.15.0",
        "mocha-multi-reporters": "^1.1.7",
        "node-sass": "^4.5.3",
        "null-loader": "^0.1.1",
        "nyc": "^11.2.1",
        "postcss-loader": "^1.3.1",
        "sass-loader": "^6.0.6",
        "sinon": "^4.1.3",
        "style-loader": "^0.18.2",
        "truffle": "^4.1.3",
        "url-loader": "^0.5.9",
        "webpack": "^3.6.0",
        "webpack-dev-server": "^2.8.2",
        "webpack-node-externals": "^1.6.0",
        "webpack-notifier": "^1.5.0"
    },
    "dependencies": {
        "path": "^0.12.7",
        "prop-types": "^15.6.1",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "truffle-contract": "^3.0.4",
        "web3": "0.20.1"
    }
}
