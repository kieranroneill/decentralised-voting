{
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "artifacts": true,
        "assert": true,
        "contract": true,
        "expect": true,
        "match": true,
        "mock": true,
        "mount": true,
        "shallow": true,
        "spy": true,
        "stub": true
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "eol-last": ["error", "always"],
        "linebreak-style": ["error", "unix"],
        "no-unused-vars": ["error"],
        "max-len": ["error", 140, { "ignoreComments": true }],
        "quote-props": ["error", "consistent-as-needed"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
